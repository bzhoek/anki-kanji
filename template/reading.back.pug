doctype html
include _field
main(class=`${color} ${mode} back`)
  .top
    include _picture
    .text
      | {{#kanji}}
      h1(class=`kanji {{Tags}}`) {{furigana}}
      | {{/kanji}}
      | {{^kanji}}
      h1(class=`kanji {{Tags}}`) {{kana}}
      | {{/kanji}}
  h1 {{nederlands}}
  include _notes
  | {{#kanji}}
  +field('kana')
  h2!= grammar[0]
    include _audio
  | {{/kanji}}
  | {{^kanji}}
  h2!= grammar[1] || grammar[0]
    include _audio
  | {{/kanji}}
  +fields('target', 'strokes', 'details')
include _radical
