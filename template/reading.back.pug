  | {{#kanji}}
  h1.title {{kanji}}
  | {{#picture}}
  div {{picture}}
  | {{/picture}}
  | {{#target}}
  div {{target}}
  | {{/target}}
  h2!= grammar[0]
    span.speech {{speech}}
  h1 {{nederlands}}
  | {{#kana}}
  div {{kana}}
  | {{/kana}}
  | {{/kanji}}
  | {{^kanji}}
  h1.title {{kana}}
  | {{#picture}}
  div {{picture}}
  | {{/picture}}
  | {{#target}}
  div {{target}}
  | {{/target}}
  h2!= grammar[1] || grammar[0]
