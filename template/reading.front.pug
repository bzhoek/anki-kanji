doctype html
main(class=`${color} ${mode} front`)
  |
  | {{#kanji}}
  h1(class=`title {{Tags}}`) {{kanji}}
  | {{/kanji}}
  | {{^kanji}}
  h1(class=`title {{Tags}}`) {{kana}}
  | {{/kanji}}
  | {{#picture}}
  div {{picture}}
  | {{/picture}}
  | {{#target}}
  div {{target}}
  | {{/target}}
  | {{#kanji}}
  h2!= grammar[0]
  | {{/kanji}}
  | {{^kanji}}
  h2!= grammar[1] || grammar[0]
  | {{/kanji}}

