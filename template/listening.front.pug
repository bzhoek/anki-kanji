= '{{#speech}}\n'
doctype html
main(class=`${color} ${mode} front`)
  .top
    include _picture_hint
    .text
      h1(class=`{{Tags}}`)
        span.type= type
      | {{#hint}}
      .hint {{hint:hint}}
      | {{/hint}}
  | {{#kanji}}
  h2!= grammar[0]
    include _audio
  | {{/kanji}}
  | {{^kanji}}
  h2!= grammar[1] || grammar[0]
    include _audio
  | {{/kanji}}
= '\n{{/speech}}'